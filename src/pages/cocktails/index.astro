---
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";

const cocktails = await getCollection("cocktails");
---

<Layout title="Cocktails">
  <div>
    <a
      href="/"
      class="mb-2 block text-center opacity-70 transition hover:scale-110 hover:underline"
    >
      Volver Atras</a
    >
    <div class="text-center mb-16">
      <h1 class="text-5xl font-bold">Lista de Cocteles</h1>
      <p class="font-medium text-xl">Coleccion de cocteles con Astro 5</p>
    </div>
  </div>
  <main>
    <ul
      class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6 max-w-screen-xl px-4"
    >
      {
        cocktails.map((cocktail) => {
          const { id, data } = cocktail;
          return (
            <li>
              <a href={`/cocktails/${id}`}>{data.name}</a>
            </li>
          );
        })
      }
    </ul>
  </main>
</Layout>
